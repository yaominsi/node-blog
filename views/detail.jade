extends layout
block js
  script(src="/javascripts/layzr.js")
  script.
    $(window).load(function(){
      var layzrx= new Layzr();
    });
    
block css
  link(rel='stylesheet', href='/stylesheets/detail.css')
block content
  div.full-wrapper
    div.bd-container
      div(class="portfolio-thumb col")
        ul
          each val, index in item.imgs
            li()
              a(id="#{val._id}" href="##{val._id}") 
                img(src="/images/loading.jpeg" data-layzr="#{val.path_d}" height="#{val.d_height}" alt='#{val.filename}')
      div.portfolio-content
        h3(class="entry-title") #{item.title}
        div.entry-content
          pre #{item.desc}
